<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.test.hsy.test4g.MainActivity" tools:showIn="@layout/activity_main"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/networkInfo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="NetworkInfo\n"
        android:isScrollContainer="true"
        android:scrollbars="vertical"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="222dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/data"
        android:layout_marginBottom="19dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/asServer"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp" />

    <TextView
        android:id="@+id/send"
        android:layout_width="171dp"
        android:layout_height="0dp"
        android:isScrollContainer="true"
        android:scrollbars="vertical"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="197dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="19dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/data"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/receive"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:isScrollContainer="true"
        android:scrollbars="vertical"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="16dp"
        app:layout_constraintEnd_toStartOf="@+id/send"
        app:layout_constraintTop_toTopOf="@+id/send"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/send"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="13dp" />

    <Button
        android:id="@+id/asClient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Client"
        tools:layout_editor_absoluteY="371dp"
        tools:layout_editor_absoluteX="280dp"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/networkInfo"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/asServer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Server"
        tools:layout_editor_absoluteY="371dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="92dp" />

    <Button
        android:id="@+id/sendData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="send"
        tools:layout_editor_absoluteX="148dp"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/networkInfo"
        android:layout_marginEnd="23dp"
        app:layout_constraintEnd_toEndOf="@+id/IP" />

    <EditText
        android:id="@+id/IP"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="IP"
        tools:layout_editor_absoluteY="454dp"
        tools:layout_editor_absoluteX="16dp"
        app:layout_constraintEnd_toStartOf="@+id/PORT"
        app:layout_constraintTop_toTopOf="@+id/PORT"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/PORT"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="14dp" />

    <EditText
        android:id="@+id/PORT"
        android:layout_width="95dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="9876"
        tools:layout_editor_absoluteY="454dp"
        tools:layout_editor_absoluteX="273dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="167dp"
        android:layout_marginTop="167dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp" />

</android.support.constraint.ConstraintLayout>
